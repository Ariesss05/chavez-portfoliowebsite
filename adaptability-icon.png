body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #f3e6dc;
}

.main-panel {
    background-color: #f0dfd3;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center; 
    justify-content: center; 
    padding: 40px;
    margin: 20px auto;
    max-width: 1200px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    box-sizing: border-box; 
    overflow: hidden; 
}

.header {
    background-color: #d8bba2;
    padding: 20px 40px;
    text-align: center;
    border-radius: 10px;
    margin: 20px auto;
    max-width: 1200px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
}

.header-title h1 {
    margin: 0;
    font-size: 36px; 
    font-weight: bold;
    color: #333;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
}

.horizontal-menu {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: center;
    margin-top: 20px;
    gap: 15px;
}

.horizontal-menu li a {
    display: inline-block;
    text-decoration: none;
    color: #fff;
    background-color: #b07c60; 
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease; 
}

.horizontal-menu li a:hover {
    background-color: #9e6a52;
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
    transform: translateY(-2px); 
}

.horizontal-menu li a.active {
    background-color: #8a5a44; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.main-panel img {
    max-height: 100%;
    max-width: 100%;
    border-radius: 15px; 
    object-fit: cover;
}

.welcome-text {
    position: absolute;
    left: 8%;
    top: 40%;
    transform: translateY(-50%);
    font-size: 70px;
    font-weight: bold;
    color: #ffffff;
    background-color: transparent;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    animation: fadeInLeft 1.5s ease-out;
}

@keyframes fadeInLeft {
    0% {
        opacity: 0;
        transform: translateX(-100px) translateY(-50%);
    }
    100% {
        opacity: 1;
        transform: translateX(0) translateY(-50%);
    }
}

@media (max-width: 1024px) {
    .welcome-text {
        font-size: 60px; 
        left: 10%; 
    }
}

@media (max-width: 768px) {
    .welcome-text {
        font-size: 50px; 
        left: 5%;
    }
}

@media (max-width: 480px) {
    .welcome-text {
        font-size: 40px; 
        left: 2%; 
        top: 35%;
        padding: 15px; 
    }
}

@media (max-width: 768px) {
    .header-title h1 {
        font-size: 28px;
    }

    .horizontal-menu {
        flex-wrap: wrap;
        gap: 10px;
    }

    .horizontal-menu li a {
        padding: 8px 16px;
        font-size: 14px;
    }

    .welcome-text {
        font-size: 50px; 
    }
}

#about {
    position: relative;
    padding: 40px 20px; 
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    box-sizing: border-box; 
}

#about h2 {
    font-size: 28px;
    font-weight: bold;
    color: #333;
    margin: 0;
    align-self: flex-start; 
    margin-bottom: 15px; 
}

.self-panel {
    display: flex;
    align-items: center; 
    background-color: rgba(255, 255, 255, 0.7); 
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    width: 100%; 
    box-sizing: border-box;
}

.self-panel img {
    width: 120px; 
    height: 120px;
    border-radius: 50%; 
    margin-right: 20px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
}

.self-info {
    max-width: 800px; 
}

.self-info h2 {
    font-size: 24px;
    font-weight: bold;
    margin: 0;
}

.self-info h3 {
    font-size: 20px;
    font-weight: normal;
    margin: 5px 0;
}

.self-info p {
    font-size: 16px;
    color: #555;
    line-height: 1.5;
}

.skills-inner-panel {
    display: flex;
    flex-direction: column;
    align-items: center; 
    background-color: rgba(255, 255, 255, 0.7);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    width: 100%; 
    box-sizing: border-box;
}

.skills-inner-panel h2 {
    font-size: 28px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
    white-space: nowrap;
    overflow: hidden; 
    text-overflow: ellipsis; 
    text-align: center;
    width: 100%; 
}

.skills-list {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    width: 100%; 
    max-width: 1200px;
    flex-wrap: wrap; 
}

.skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1; 
    max-width: 300px; 
    text-align: center;
    padding: 20px;
}

.skill-item img {
    width: 80px; 
    height: 80px; 
    margin-bottom: 10px; 
}

.skill-item h3 {
    font-size: 20px;
    color: #333;
    font-weight: bold;
}

@media screen and (max-width: 768px) {
    .skills-inner-panel h2 {
        font-size: 24px;
    }

    .skills-list {
        flex-direction: column; 
        align-items: center; 
        gap: 15px; 
    }

    .skill-item {
        max-width: 250px; 
    }

    .skill-item img {
        width: 60px;
        height: 60px;
    }

    .skill-item h3 {
        font-size: 18px;
    }
}

@media screen and (max-width: 480px) {
    .skills-inner-panel h2 {
        font-size: 20px; 
    }

    .skills-list {
        gap: 10px;
    }

    .skill-item {
        max-width: 200px; 
    }

    .skill-item img {
        width: 50px;
        height: 50px;
    }

    .skill-item h3 {
        font-size: 16px;
    }
}

.education-panel {
    display: flex;
    flex-direction: column; 
    gap: 20px; 
    background-color: rgba(255, 255, 255, 0.7); 
    padding: 20px;
    border-radius: 10px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    width: 100%; 
    box-sizing: border-box; 
}


.education-item {
    display: flex;
    align-items: center; 
    gap: 20px; 
    padding: 15px; 
    border-radius: 10px; 
    background-color: rgba(255, 255, 255, 1); 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
}

.education-item img {
    width: 100px;
    height: 100px; 
    border-radius: 10px; 
    object-fit: cover; 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); 
}

.education-info {
    flex: 1; 
    text-align: left; 
}

.education-info h3 {
    font-size: 20px; 
    font-weight: bold;
    color: #333; 
    margin: 0 0 5px;
}

.education-info p {
    font-size: 16px;
    color: #555; 
    line-height: 1.5;
    margin: 0;
}

@media (max-width: 768px) {
    .education-item {
        flex-direction: column; 
        align-items: center; 
        text-align: center; 
    }

    .education-item img {
        width: 80px; 
        height: 80px;
    }
}
.main-panel h2 {
    font-size: 28px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
}

.flex-gallery {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    align-items: flex-start;
    margin: 0 auto;
}

.gallery-item {
    height: auto;
    max-width: 100%;
    width: calc(25% - 10px); 
    min-width: 200px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    object-fit: cover;
}

.gallery-item:hover {
    transform: scale(1.03);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
}

.lightbox {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
}

.lightbox-image {
    max-width: 90%;
    max-height: 90%;
    border-radius: 10px;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
}

.lightbox .close {
    position: absolute;
    top: 20px;
    right: 30px;
    color: white;
    font-size: 30px;
    font-weight: bold;
    cursor: pointer;
    z-index: 1001;
}

.lightbox .close:hover {
    color: #f0f0f0;
    transform: scale(1.2);
}

@media screen and (max-width: 1024px) {
    .gallery-item {
        width: calc(33.33% - 10px); 
    }
}

@media screen and (max-width: 768px) {
    .gallery-item {
        width: calc(50% - 10px); 
    }
}

@media screen and (max-width: 480px) {
    .gallery-item {
        width: 100%; 
    }
}



.contact-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 40px;
}

.contact-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 15px;
    padding: 10px;
    align-items: flex-start;
}

.info-item {
    display: flex;
    align-items: center;
    gap: 10px;
}

.info-item img {
    width: 24px;
    height: 24px;
}

.map-container {
    flex: 1.5; 
    display: flex;
    justify-content: center;
}

.map-container iframe {
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    width: 100%;
    height: 300px;
}


@media (max-width: 768px) {
    .contact-container {
        flex-direction: column;
        align-items: center;
    }

    .contact-info, .map-container {
        flex: none;
        width: 100%;
    }

    .map-container iframe {
        height: 250px;
    }
}

.socials-container {
    width: 100%;
    text-align: center;
}

.socials-container p {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
}

.social-logos {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.social-logos a img {
    width: 40px;
    height: 40px;
    transition: transform 0.3s ease, filter 0.3s ease;
}

.social-logos a img:hover {
    transform: scale(1.1);
    filter: hue-rotate(180deg);
    cursor: pointer;
}


@media (max-width: 1024px) {
    .contact-container {
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .contact-info,
    .map-container {
        flex: none; 
        width: 100%;
    }

    .map-container iframe {
        height: 250px; 
    }

    .socials-container p {
        font-size: 16px;
    }

    .social-logos a img {
        width: 35px; 
        height: 35px;
    }
}

@media (max-width: 768px) {
    
    .contact-info,
    .map-container {
        padding: 10px; 
    }

    .map-container iframe {
        height: 220px; 
    }

    .social-logos a img {
        width: 30px; 
        height: 30px;
    }

    .socials-container p {
        font-size: 14px; 
    }
}


.linkedin-card {
    background: #f4f4f4;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    margin-top: 20px;
}

.linkedin-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #0077b5;
    color: white;
    text-decoration: none;
    border-radius: 5px;
}

.linkedin-btn:hover {
    background-color: #005582;
}

.projects-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.project-card {
    background: #f4f4f4;
    padding: 20px;
    border-radius: 10px;
    transition: transform 0.2s ease;
}

.project-card:hover {
    transform: translateY(-5px);
}

.project-card h3 {
    margin-bottom: 10px;
}

.project-card p {
    font-size: 14px;
    margin: 5px 0;
}

.project-card a {
    display: inline-block;
    margin-top: 10px;
    padding: 8px 15px;
    background-color: #24292e;
    color: white;
    text-decoration: none;
    border-radius: 5px;
}

.project-card a:hover {
    background-color: #000;
}

/* Contact & Inquiry Form Container */
#contact-form, #inquiry-form {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 25px 30px;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    margin-bottom: 30px;
    width: 100%;
    max-width: 600px;
    box-sizing: border-box;
}

/* Form Headings */
#inquiry-form h3 {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
    text-align: center;
}

/* Form Labels */
#contact-form label, #inquiry-form label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #333;
}

/* Input & Textarea */
#contact-form input, #contact-form textarea,
#inquiry-form input, #inquiry-form textarea,
#inquiry-form select {
    width: 100%;
    padding: 10px 12px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 15px;
    box-sizing: border-box;
    transition: border 0.3s ease, box-shadow 0.3s ease;
}

#contact-form input:focus, #contact-form textarea:focus,
#inquiry-form input:focus, #inquiry-form textarea:focus,
#inquiry-form select:focus {
    border-color: #b07c60;
    box-shadow: 0 0 5px rgba(176,124,96,0.4);
    outline: none;
}

/* Buttons */
#contact-form button, #inquiry-form button {
    background-color: #b07c60;
    color: #fff;
    padding: 12px 20px;
    font-weight: bold;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
    transition: all 0.3s ease;
}

#contact-form button:hover, #inquiry-form button:hover {
    background-color: #9e6a52;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

/* Confirmation Messages */
#contact-msg, #inq-msg {
    text-align: center;
    font-weight: bold;
    margin-top: 10px;
    color: #2d6a4f; /* success color */
}

/* Responsive Form Layout */
@media screen and (max-width: 768px) {
    #contact-form, #inquiry-form {
        padding: 20px;
    }

    #inquiry-form h3 {
        font-size: 20px;
    }
}

@media screen and (max-width: 480px) {
    #contact-form, #inquiry-form {
        padding: 15px;
    }

    #inquiry-form h3 {
        font-size: 18px;
    }

    #contact-form button, #inquiry-form button {
        font-size: 14px;
        padding: 10px 15px;
    }
}